	<!-- slide 3 textboxes -->
	<component id="ID_s3_txtTitle01">
		<text><![CDATA[Identification and Authentication Policies]]></text>
	</component>

	<component id="ID_s3_txtBody01">
		<text><![CDATA[Specifies authorized persons that can have access to network resources and outlines verification procedures.]]></text>
	</component>

	<component id="ID_s3_txtTitle02">
		<text><![CDATA[Password Policies]]></text>
	</component>

	<component id="ID_s3_txtBody02">
		<text><![CDATA[Ensures passwords meet minimum requirements and are changed regularly.]]></text>
	</component>

	<component id="ID_s3_txtTitle03">
		<text><![CDATA[Acceptable Use Policies]]></text>
	</component>

	<component id="ID_s3_txtBody03">
		<text><![CDATA[Identifies network resources and usages that are acceptable to the organization. It may also identify ramifications if this policy is violated.]]></text>
	</component>

	<component id="ID_s3_txtTitle04">
		<text><![CDATA[Remote Access Policies]]></text>
	</component>

	<component id="ID_s3_txtBody04">
		<text><![CDATA[Identifies how remote users can access a network and what is accessible via remote connectivity.]]></text>
	</component>

	<component id="ID_s3_txtTitle05">
		<text><![CDATA[Network Maintenance Policies]]></text>
	</component>

	<component id="ID_s3_txtBody05">
		<text><![CDATA[Specifies network device operating systems and end user application update procedures.]]></text>
	</component>

	<component id="ID_s3_txtTitle06">
		<text><![CDATA[Incident Handling Policies]]></text>
	</component>

	<component id="ID_s3_txtBody06">
		<text><![CDATA[Describes how security incidents are handled.]]></text>
	</component>
